{
  "manifest_version": 3,
  "name": "Tab Roulette",
  "version": "1.0",
  "description": "Spin the wheel and close a random tab!",
  "permissions": [
      "tabs",
      "scripting",
      "notifications",
      "offscreen"
  ],
  "host_permissions": [
      "<all_urls>"
  ],
  "background": {
      "service_worker": "background.js"
  },
  "action": {
      "default_icon": {
          "16": "icons/roulette-16.png",
          "32": "icons/roulette-32.png",
          "48": "icons/roulette-48.png"
      },
      "default_title": "Tab Roulette"
  },
  "icons": {
      "16": "icons/roulette-16.png",
      "32": "icons/roulette-32.png",
      "48": "icons/roulette-48.png",
      "128": "icons/roulette-128.png"
  },
  "web_accessible_resources": [
      {
          "resources": [
              "sounds/tick.mp3",
              "sounds/poof.mp3",
              "offscreen.html"
          ],
          "matches": [
              "<all_urls>"
          ]
      }
  ]
}